{
  "compilerOptions": {
    /* Base Options */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "target": "ES2020",
    "verbatimModuleSyntax": false,
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,

    "moduleResolution": "NodeNext",
    "module": "NodeNext",

    "lib": ["ES2022"]
  }
}
